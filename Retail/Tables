-- bills table
create table bills
(
  billid     int,
  billdate   date,
  custname   varchar2(200),
  billtotal  number,
  constraint bills_pk primary key (billid)
);

-- Insert Bill Data (Create 5 Rows )
INSERT INTO bills (billid, billdate,custname, billtotal)
values (1,TO_DATE('04-JUL-2019','DD-MON-YYYY'),'aaa',null);

